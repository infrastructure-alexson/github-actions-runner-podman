# GitHub Actions Runner Environment File
# Copy to: /home/gha/.runner.env
# Used by systemd service file

# GitHub Configuration (REQUIRED)
GITHUB_REPO_URL=https://github.com/YOUR-ORG/YOUR-REPO
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Runner Configuration
RUNNER_NAME=runner-01
RUNNER_LABELS=podman,linux,ci,docker
RUNNER_WORK_DIR=./_work
RUNNER_EPHEMERAL=false
RUNNER_REPLACE=true

# Storage Configuration
RUNNER_WORK_VOLUME=/opt/gha

# User Configuration
RUNNER_USER=gha
RUNNER_GROUP=gha

# Container Resource Limits
RUNNER_CPUS=4
RUNNER_MEMORY=4g

# Logging
LOG_LEVEL=info

# Optional: Proxy settings (uncomment if behind proxy)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1,internal.example.com

# Optional: Additional environment variables
# CUSTOM_VAR=value

